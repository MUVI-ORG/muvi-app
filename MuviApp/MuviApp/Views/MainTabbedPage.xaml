<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage  NavigationPage.HasBackButton="False"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuviApp.Views.MainTabbedPage"
             xmlns:android="clr-namespace:Xamarin.Forms.PlatformConfiguration.AndroidSpecific;assembly=Xamarin.Forms.Core" 
             xmlns:views="clr-namespace:MuviApp.Views"
             android:TabbedPage.ToolbarPlacement="Bottom"
             BackgroundColor="#1b1b2b"
             BarTextColor="White"
             android:TabbedPage.BarItemColor="White"
             android:TabbedPage.BarSelectedItemColor="LightGreen"
             >
    <NavigationPage.TitleView>
        <Grid HorizontalOptions="Center" ColumnDefinitions="Auto" Padding="5">
            <Label Grid.Column="0" 
                   Text="MUVI"
                   CharacterSpacing="2"
                   TextColor="LightGreen" 
                   HorizontalOptions="Center"
                   FontSize="Title"
                   FontAttributes="Bold"/>
        </Grid>
    </NavigationPage.TitleView>
    <TabbedPage.Children>
        <views:MostPopularPage/>
        <views:ComingSoonPage/>
    </TabbedPage.Children>
</TabbedPage>